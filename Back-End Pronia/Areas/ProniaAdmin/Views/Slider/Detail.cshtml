@model Slider
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <div>
        <h4>Id: </h4>
        <p>@Model.Id</p>
    </div>
    <div>
        <h4>Title:</h4>
        <p>@Model.Title</p>
    </div>
    <div>
        <h4>SubTitle:</h4>
        <p>@Model.SubTitle</p>
    </div>
    <div>
        <h4>Discount:</h4>
        <p>@Model.DisCount</p>
    </div>
    <div>
        <h4>Image:</h4>
        <img style="width: 150px; height:90px" src="~/assets/images/website-images/@Model.Image" />
    </div>
</div>


